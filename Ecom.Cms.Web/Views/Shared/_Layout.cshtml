@using Ecom.Cms.Web.Shared.Models.AuthWeb
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Commerce CMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link asp-append-version="true" rel="icon" type="image/x-icon" href="https://zhlneinpjgzpjbpozskh.supabase.co/storage/v1/object/public/ecommerce-web-image-product/ecommerce-web-%20gemini-gpt-logo.png">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div class="bg-dark text-white" id="sidebar-wrapper" style="min-width: 250px; min-height: 100vh;">
            <div class="sidebar-heading border-bottom p-4 fs-4 fw-bold text-primary">
                <i class="bi bi-cart4 me-2"></i>E-COM ADMIN
            </div>
            <div class="list-group list-group-flush px-3">

                <div asp-dept-codes=@DepartmentCode.Content.ToString()>
                    <a href="/Category" class="list-group-item list-group-item-action bg-dark text-white border-0 py-2 mb-1 rounded">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-grid-3x3-gap me-3 text-info"></i>
                            <span>Ngành hàng</span>
                        </div>
                    </a>

                    <a href="/Brand" class="list-group-item list-group-item-action bg-dark text-white border-0 py-2 mb-1 rounded">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-patch-check me-3 text-warning"></i>
                            <span>Thương hiệu</span>
                        </div>
                    </a>

                    <a href="/Product" class="list-group-item list-group-item-action bg-dark text-white border-0 py-2 mb-1 rounded">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-box-seam me-3 text-success"></i>
                            <span>Sản phẩm</span>
                        </div>
                    </a>
                </div>

            </div>
        </div>

        <div id="page-content-wrapper" class="w-100 bg-light">
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm px-4">
                <div class="container-fluid">
                    <button class="btn btn-outline-secondary btn-sm" id="menu-toggle">
                        <i class="bi bi-list"></i>
                    </button>

                    <div class="ms-auto d-flex align-items-center">
                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle text-dark" data-bs-toggle="dropdown">
                                <img src="@User.FindFirst("Avatar")?.Value" alt="mdo" width="32" height="32" class="rounded-circle me-2 bg-secondary">
                                <div class="me-2">
                                    <div class="fw-bold small">@User.FindFirst("FullName")?.Value</div>
                                    <div class="text-muted" style="font-size: 0.7rem;">@User.FindFirst("DeptName")?.Value</div>
                                </div>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 rounded-xl p-2">
                                <li>
                                    <a class="dropdown-item rounded-lg py-2" href="/Profile">
                                        <i class="bi bi-person me-2"></i>Hồ sơ
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider opacity-50"></li>
                                <li>
                                    @* Sử dụng Form để đảm bảo an toàn bảo mật *@
                                    <form asp-controller="SignIn" asp-action="SignOut" method="post" id="logoutForm" class="m-0">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger rounded-lg py-2 d-flex align-items-center w-100 border-0 bg-transparent">
                                            <i class="bi bi-box-arrow-right me-2"></i>
                                            <span>Đăng xuất</span>
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $("#menu-toggle").click(function(e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>
</html>